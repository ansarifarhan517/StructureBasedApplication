{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "./types"],
    "target": "ES2015",
    "module": "CommonJS",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@*": ["./src/*"],
    }
  },
  "include": ["index.tsx", "src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["node_modules"]
}




